@model IEnumerable<Product>

<div class="product-items">
    <div class="row product-active">
        @for (int i = 0; i < (int)Math.Ceiling((decimal)Model.Count() / 2); i++)
        {
            <div class="col-lg-2">
                @foreach (Product product in Model.Skip(i * 2).Take(2))
                {
                    <div class="single-product mt-30">
                        <div class="product-image">
                            <a href="single-product.html">
                                <img class="first-image" src="assets/images/product/@product.MainImage" alt="product">
                                <img class="second-image" src="assets/images/product/@product.HoverImage" alt="product">
                            </a>
                            <ul class="product-meta">
                                <li><a class="addtobasket" asp-controller="basket" asp-action="addtobasket" asp-route-id="@product.Id"><i class="icon ion-bag"></i></a></li>
                                <li><a href="#"><i class="icon ion-android-favorite-outline"></i></a></li>
                                <li><a href="#"><i class="icon ion-android-options"></i></a></li>
                                <li><a data-toggle="modal" class="modalBtn" data-target="#productQuickModal" asp-controller="shop" asp-action="modal"
                                asp-route-id="@product.Id" ><i class="icon ion-android-open"></i></a></li>

                            </ul>
                            @if (product.DiscountedPrice > 0)
                            {
                                <span class="discount-product">-@((((product.Price * 100) / product.DiscountedPrice)-100).ToString("0.##"))%</span>

                            }


                        </div>
                        <div class="product-content">
                            <ul class="product-rating">
                                <li class="rating-on"><i class="fas fa-star"></i></li>
                                <li class="rating-on"><i class="fas fa-star"></i></li>
                                <li class="rating-on"><i class="fas fa-star"></i></li>
                                <li class="rating-on"><i class="fas fa-star"></i></li>
                                <li class="rating-on"><i class="fas fa-star"></i></li>
                            </ul>
                            <h4 class="product-title"><a href="single-product.html">@product.Title</a></h4>

                            

                            <div class="product-price">
                                @if (product.DiscountedPrice > 0)
                                {
                                <span class="regular-price ">€@product.Price.ToString("0.##")</span>
                                <span class="price-sale">€@product.DiscountedPrice.ToString("0.##")</span>
                                }
                                else
                                {
                                <span class="price-sale">€@product.Price.ToString("0.##")</span>
                                }
                            </div>
                           

                        </div>
                    </div>
                }
            </div>
        }
    </div> <!-- row -->
</div> <!-- product items -->
