
@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
    int counter = 1;
}

<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Nº</th>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Product Count</th>
                    <th>Created At</th>
                    <th>Setting</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Category category in Model)
                {
                    <tr>
                        <td>@counter</td>
                        <td>
                            <img width="100px;" src="~/assets/images/@category.Image" alt="Alternate Text" />
                        </td>
                        <td>@category.Name </td>
                        <td>Product.Count </td>
                        <td>
                            <a class="btn btn-warning">Update</a>
                            <a class="btn btn-danger">Delete</a>
                            <a class="btn btn-primary">Detail</a>
                        </td>
                    </tr>

                    counter++;
                }
            </tbody>
        </table>
    </div>
</div>

